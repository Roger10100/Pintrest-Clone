  <header>
    <h1>Post Details</h1>
  </header> 

  <div class="container">
    <div class="box">
      <img src="/images/uploads/<%= post.image %>" alt="image">
      <div class="caption"><%= post.imagetext %></div>

      <!-- Like Button -->
      <form action="/posts/<%= post._id %>/like" method="POST">
        <button type="submit"><%= post.likes.includes(user._id) ? 'Unlike' : 'Like' %></button>
        <span><%= post.likes.length %> Likes</span>
      </form>

      <!-- Comment Form -->
      <form action="/posts/<%= post._id %>/comment" method="POST">
        <input type="text" name="text" placeholder="Add a comment..." required>
        <button type="submit">Comment</button>
      </form>

      <!-- Display Comments -->
      <div class="comments">
        <% post.comments.forEach(comment => { %>
        <div class="comment">
          <p><%= comment.text %></p>
          <small><%= comment.user.username %> - <%= comment.date.toLocaleString() %></small>
        </div>
        <% }) %>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
  <script>
    const navSlide = () => {
      const lines = document.querySelector('.lines');
      const nav = document.querySelector('.navLink');
      
      lines.addEventListener('click', () => {
        nav.classList.toggle('nav-active');
        // Line Animation
        lines.classList.toggle('toggle');
      });
    }
    navSlide();
  </script>
</body>
